<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:SignaturePad.Forms;assembly=SignaturePad.Forms"
             x:Class="TrireksaTracingApps.Views.Signature">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="45"/>
            </Grid.RowDefinitions>
            <controls:SignaturePadView Grid.Row="0" x:Name="signatureView"	StrokeWidth="3"	StrokeColor="Black"	BackgroundColor="White" />
            <StackLayout Grid.Row="1" Padding="3">
                <Button WidthRequest="75" HeightRequest="40" HorizontalOptions="End" Text="Save" Clicked="Button_Clicked"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>